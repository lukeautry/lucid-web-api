{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "declaration": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "newLine": "LF"
    },
    "include": [
        "src/**/*.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}