{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "declaration": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "newLine": "LF",
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
