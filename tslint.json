{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "object-curly-spacing": "always",
    "arrow-parens": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "brace-style": ["1tbs", { "allowSingleLine": true }],
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": [
      true,
      200
    ],
    "no-unused-expression": false,
    "no-shadowed-variable": false,
    "whitespace": [true, "check-module", "check-operator"],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "member-ordering": [
      false
    ],
    "max-classes-per-file": [
      false, 1
    ],
    "no-reference": false,
    "no-namespace": [
      false
    ],
    "ban-types": false
  }
}
